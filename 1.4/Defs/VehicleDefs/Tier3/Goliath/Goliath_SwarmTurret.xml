<?xml version="1.0" encoding="utf-8"?>

<Defs>
	<Vehicles.VehicleTurretDef ParentName="VehicleTurretBase">
		<defName>Goliath_SwarmTurret</defName>
		<label>toad artillery</label>
		<description>A mortar turret that launches all kinds of shells, typically mounted on Toad siege pods. While it can inflict devastating damage, the mortar's inherent inaccuracy makes it more useful for attacking large fortifications than groups of enemies in the field.</description>
		
		<turretType>Rotatable</turretType>
		<shotSound>RocketswarmLauncher_Fire</shotSound>
		<reloadSound>Artillery_ShellLoaded</reloadSound>
		
		<projectile>Rocket_Scytheman_MainTurret</projectile>
		
		<reloadTimer>12.2</reloadTimer>
		<warmUpTimer>1</warmUpTimer>
		<genericAmmo>true</genericAmmo>
		<magazineCapacity>160</magazineCapacity>
		<chargePerAmmoCount>10</chargePerAmmoCount>
		
		<autoSnapTargeting>false</autoSnapTargeting>
		<rotationSpeed>1</rotationSpeed>
		
		<projectileOffset>1</projectileOffset>
		
		<minRange>20.9</minRange>
		
		<fireModes>
			<li>
				<shotsPerBurst>8</shotsPerBurst>
				<ticksBetweenShots>10</ticksBetweenShots>
				<ticksBetweenBursts>240</ticksBetweenBursts>
				<spreadRadius>12.9</spreadRadius>
				<label>Burst</label>
				<texPath>UI/Gizmos/FireRate_Burst</texPath>
			</li>
		</fireModes>
		
		<graphicData>
			<texPath>Things/Vehicles/Tier3/Tier3_SiegePod/Tier3_SiegePod_RocketSwarmTurret</texPath>
			<graphicClass>Vehicles.Graphic_Turret</graphicClass>
			<shaderType>CutoutComplexPattern</shaderType>
			<drawSize>(2, 2)</drawSize>
		</graphicData>
		
		<ammunition>
			<thingDefs>
				<li>Chemfuel</li>
			</thingDefs>
		</ammunition>
	</Vehicles.VehicleTurretDef>
</Defs>